  <script>
  	function checkPassword(){
  		if ($('#password').val() != $('#passwordConfirm').val()) {
  			alert('Passwords are not the same');
  			return false;
  		}

  		else {
  			return true;
  		}
  	};
  </script>
	<body>
		<div class="pure-g">
			<div class="pure-u-1" id="header">
				<img src="./images/backgroundDefault.jpg" style="top: -80px; position:relative;  z-index: -1;">
			</div>
		</div>
		<div class="pure-g">
			<div class="pure-u-lg-1-5" id="sidebar"> </div>
				<div class="pure-u-1 pure-u-lg-3-5">
					<div id="formArea" style="height: 800px">
						<div class="sectionContainer">
							<div class="sectionTitle"> Change Password </div>
							<div class="input">
								<form role="form" action="/changePass/<%=user._id%>" method = "post" onsubmit="return checkPassword()">
                  <input type="password" name="password" id="password" placeholder="New password"><br>
                  <input type="password" name="passwordConfirm" id="passwordConfirm" placeholder="Confirm new password"><br>
                  <br><br>
                  <input type="Submit" value="Submit">
                </form>
							</div>
